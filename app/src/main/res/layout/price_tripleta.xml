<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tripletaLabel"
                style="@style/PricesLabel"
                android:text="Tripleta" />

            <LinearLayout
                android:id="@+id/tripletaFirstContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/prices_first_container_margin_top"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/tripletaSecondContainer"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tripletaLabel">

                <TextView
                    style="@style/PriceValueTitle"
                    android:text="@string/prices_position_first"
                    app:layout_constraintTop_toBottomOf="@id/tripletaLabel" />

                <TextView
                    style="@style/PricesValue"
                    android:id="@+id/tripletaFirstValue"
                    tools:text="10.00" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tripletaSecondContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tripletaFirstContainer"
                app:layout_constraintTop_toTopOf="@id/tripletaFirstContainer">

                <TextView
                    style="@style/PriceValueTitle"
                    android:text="@string/prices_position_second"
                    app:layout_constraintTop_toBottomOf="@id/tripletaLabel" />

                <TextView
                    style="@style/PricesValue"
                    android:id="@+id/tripletaSecondValue"
                    tools:text="10.00" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</merge>